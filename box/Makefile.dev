.PHONY: all dev2

all:
	libtoolize --ltdl
	aclocal
	autoconf
	autoheader
	automake --add-missing

# Here we show how one can use another version of the libtool
# installed on the user's directory
dev2:
	~/local/bin/libtoolize --ltdl
	aclocal -I ~/local/share/aclocal # --verbose
	autoconf
	autoheader
	automake-1.10 --add-missing

