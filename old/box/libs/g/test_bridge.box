// Consistency checks for C-Box interface.

#provide "g.bridge.test"

include "g"

[
  TestCBoxInterface = Void

  test_matrix = Matrix[.m11=1.00, .m12=2.25, .m13=3.50
                       .m21=4.75, .m22=6.00, .m23=6.25]
  [
    Matrix@TestCBoxInterface "Box_G_Lib_Bridge_Test_Matrix" ?
    TestCBoxInterface[test_matrix]
  ]

  test_window = Window[]
  test_simpleput = SimplePut[.matrix=test_matrix, .src=test_window]
  [
    SimplePut@TestCBoxInterface "Box_G_Lib_Bridge_Test_SimplePut" ?
    TestCBoxInterface[test_simpleput]
  ]

  TestWindow = CPtr
  Window@TestWindow "Box_G_Lib_Bridge_Window_At_TestWindow" ?
  SimplePut@TestWindow "Box_G_Lib_Bridge_SimplePut_At_TestWindow" ?
  \ TestWindow[test_window, test_simpleput]
]
